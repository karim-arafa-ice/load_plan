<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit_view" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='contact_addresses']" position="after">
                    <page string="Arabic Informations">
                        <group>
                            <field name="name_arabic" placeholder="partner Name in Arabic" string="Partner Name"/>
                            <field  name="street_arabic" placeholder="Street in Arabic..."/>
                            <field  name="street2_arabic" placeholder="Street 2 in Arabic..."/>
                            <field  name="city_arabic" placeholder="City in Arabic"/>
                            <field  name="state_arabic" placeholder="State in Arabic"/>
                            <field  name="zip_arabic" placeholder="ZIP in Arabic"/>
                            <field  name="country_arabic" placeholder="Country in Arabic"/>
                            <field name="project_name"/>                                
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>