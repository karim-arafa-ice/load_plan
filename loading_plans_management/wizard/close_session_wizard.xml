<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_close_session_wizard_form" model="ir.ui.view">
            <field name="name">ice.close.session.wizard.form</field>
            <field name="model">ice.close.session.wizard</field>
            <field name="arch" type="xml">
                <form string="Close Session">
                    <!-- Header Section with Icon and Title -->
                    <div class="o_form_sheet_bg">
                        <div class="oe_title">
                            <h1>
                                <i class="fa fa-stop-circle text-danger me-2"></i>
                                <span>Close Session</span>
                            </h1>
                            <div class="o_row">
                                <div class="text-muted">
                                    Review and finalize session data before closing
                                </div>
                            </div>
                        </div>
                    </div>

                    <sheet>
                        <!-- Current Session Data Section -->
                        <div class="row">
                            <div class="col-12">
                                <div class="o_group">
                                    <div class="o_group_col-6">
                                        <separator string="📊 Current Session Data" class="oe_horizontal"/>
                                        <div class="alert alert-info o_form_readonly" role="alert">
                                            <i class="fa fa-info-circle"></i>
                                            <strong>Review your current inventory:</strong> Verify quantities and specify returns/scraps
                                        </div>
                                        
                                        <field name="current_product_line_ids" 
                                               string="Current Inventory" 
                                               nolabel="1">
                                            <tree editable="bottom" 
                                                  decoration-warning="return_quantity > 0" 
                                                  decoration-danger="scrap_quantity > 0"
                                                  create="false" 
                                                  delete="false">
                                                <field name="product_id" readonly="1"/>
                                                <field name="loaded_quantity" 
                                                       readonly="1" 
                                                       string="Loaded Qty"
                                                       widget="integer"/>
                                                <field name="current_quantity" 
                                                       readonly="1" 
                                                       string="Current Qty"
                                                       widget="integer"/>
                                                <field name="return_quantity" 
                                                       string="Return Qty"
                                                       widget="integer"/>
                                                <field name="scrap_quantity" 
                                                       string="Scrap Qty"
                                                       widget="integer"/>
                                            </tree>
                                        </field>
                                    </div>

                                    <div class="o_group_col-6">
                                        <separator string="⚙️ Need Second Load" class="oe_horizontal"/>
                                        
                                        <group>
                                            <div class="o_row">
                                                <field name="need_second_load" widget="radio" options="{'horizontal': true}"/>
                                                <field name="is_concrete" invisible="1"/>
                                            </div>
                                        </group>

                                        <!-- Second Load Section -->
                                        <div invisible="need_second_load != 'yes'" class="mt-3">
                                            <separator string="🔄 Second Load Configuration" class="oe_horizontal"/>
                                            <div class="alert alert-warning" role="alert">
                                                <i class="fa fa-exclamation-triangle"></i>
                                                <strong>Second Load Required:</strong> Specify additional quantities
                                            </div>
                                            
                                            <field name="product_line_ids" 
                                                   string="Additional Load Quantities" 
                                                   nolabel="1">
                                                <tree editable="bottom" 
                                                      decoration-success="quantity > 0">
                                                    <field name="product_id"/>
                                                    <field name="quantity" 
                                                           string="Additional Qty"
                                                           widget="integer"/>
                                                </tree>
                                            </field>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Customer Orders Section -->
                        <div class="row mt-4" >
                            <div class="col-12">
                                <separator string="👥 Customer Orders" class="oe_horizontal"/>
                                <div class="alert alert-success" role="alert">
                                    <i class="fa fa-users"></i>
                                    <strong>Concrete Distribution:</strong> Allocate quantities to customers
                                </div>
                                
                                <field name="customer_line_ids" 
                                       required="is_concrete"
                                       nolabel="1">
                                    <tree editable="bottom" 
                                          decoration-success="quantity > 0"
                                          sum="quantity">
                                        <field name="customer_id" 
                                               string="Customer"
                                               options="{'no_create': True}"/>
                                        <field name="quantity" 
                                               string="Allocated Quantity"
                                               widget="integer"
                                               sum="Total Allocated"/>
                                    </tree>
                                </field>
                            </div>
                        </div>

                        
                    </sheet>

                    <!-- Enhanced Footer with Better Button Styling -->
                    <footer>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <i class="fa fa-info-circle me-1"></i>
                                Please review all data before validating
                            </div>
                            <div>
                                <button string="✓ Validate and Close Session" 
                                        type="object" 
                                        name="action_validate" 
                                        class="btn-primary me-2"
                                        confirm="Are you sure you want to close this session? This action cannot be undone."/>
                                <button string="Cancel" 
                                        special="cancel" 
                                        class="btn-secondary"/>
                            </div>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>