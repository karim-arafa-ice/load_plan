<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.view.form.inherit.edit.order.date</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <group>
                        <label for="is_concrete"/>
                        <field name="is_concrete"/>
                    </group>
                    
                </xpath>
            </field>
        </record>
        <record id="seq_ice_return_request" model="ir.sequence">
            <field name="name">Ice Return Request</field>
            <field name="code">ice.return.request</field>
            <field name="prefix">RR</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="view_ice_return_request_form" model="ir.ui.view">
            <field name="name">ice.return.request.form</field>
            <field name="model">ice.return.request</field>
            <field name="arch" type="xml">
                <form string="Return Request">
                    <header>
                        <button name="action_load_opened_sessions" string="Load Opened Sessions" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_confirm_return" string="Confirm Return" type="object" class="oe_highlight" invisible="state != 'sessions_loaded'"/>
                        <button name="action_empty_warehouse" string="Empty the Warehouse" type="object" invisible="state not in ['confirmed', 'warehouse_check']"/>
                        <button name="action_process_cash_return" string="Process Cash Return" type="object" invisible="state not in ['confirmed', 'car_check', 'warehouse_check']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sessions_loaded,confirmed,warehouse_check,car_check,payment,done"/>
                    </header>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="salesman_id"/>
                            <field name="date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <notebook>
                            <page string="Open Sessions">
                                <field name="open_session_ids"/>
                            </page>
                            <page string="Loading Requests">
                                <field name="loading_request_ids"/>
                            </page>
                            <page string="Car Checks">
                                <field name="car_check_request_ids"/>
                            </page>
                            <page string="Cash Return">
                                <group>
                                    <field name="salesman_cash_journal_id"/>
                                    <field name="salesman_balance"/>
                                    <field name="actual_cash_received"/>
                                    <field name="destination_journal_id"/>
                                </group>
                                <field name="cash_payment_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ice_return_request_tree" model="ir.ui.view">
            <field name="name">ice.return.request.tree</field>
            <field name="model">ice.return.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="salesman_id"/>
                    <field name="date"/>
                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state != 'done'"/>
                </tree>
            </field>
        </record>

        <record id="action_ice_return_request" model="ir.actions.act_window">
            <field name="name">Return Requests</field>
            <field name="res_model">ice.return.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_ice_return_requests"
                  name="Return Requests"
                  action="action_ice_return_request"
                  parent="menu_ice_loading_operations"
                  sequence="20"/>

    </data>
</odoo>