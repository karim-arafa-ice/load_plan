<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ice_pause_reason_wizard_form" model="ir.ui.view">
        <field name="name">ice.pause.reason.wizard.form</field>
        <field name="model">ice.pause.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason for Pausing">
                <group>
                    <field name="loading_request_id" invisible="1"/>
                    <field name="pause_reason" nolabel="1" placeholder="Enter reason for pausing..."/>
                </group>
                <footer>
                    <button name="action_confirm_pause" string="Confirm Pause" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>